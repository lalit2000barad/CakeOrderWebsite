  </div>



  <form action="/admin" method="POST">

    <h1>Post cake details</h1>

   

    <fieldset>

      <legend><span class="number">1</span>CakeName</legend>

      <label for="desc">CakeName:</label>
      <input id="sd" name="c_name" type="text">

      <label for="desc">Shokeeper Name:</label>
      <input id="sd" name="S_name" type="text">

      <label for="desc">Shop Name:</label>
      <input id="sd" name="Shop" type="text">

      <label for="desc">Mobile no:</label>
      <input id="sd" name="Mobile" type="Number">



    </fieldset>

    <fieldset>

      <legend><span class="number">2</span> Cake Description</legend>

      <label for="desc">Short Description:</label>
      <textarea id="sd" name="cake_desc"></textarea>

      <label for="price">price</label>
      <input type="Number" name="price" />
      </label>

      <label for="flavour">Flavour:</label>
      <input type="text" name="flav">

      <label>Weight:</label>
      <input type="text" name="wght" id="wei">
    
      <label for="Category">Choose Category:</label>
